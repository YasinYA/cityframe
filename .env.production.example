# ===========================================
# CityFrame Production Environment Variables
# ===========================================
# Copy this file and fill in your values
# DO NOT commit .env.production with real values

# ---- Required: Core Services ----

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@host:5432/cityframe

# Redis (for job queue)
REDIS_URL=redis://host:6379

# MinIO/S3 Storage
S3_ENDPOINT=https://your-minio-endpoint.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=cityframe-wallpapers
S3_REGION=us-east-1
# Public URL if different from endpoint (e.g., CDN URL)
S3_PUBLIC_URL=https://storage.yourdomain.com

# ---- Required: App Config ----

# Public URL of your app (no trailing slash)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# ---- Optional: Maps ----

# Mapbox token for map tiles (optional, uses free OSM tiles if not set)
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.xxx

# ---- Optional: AI Enhancement ----

# Replicate API for AI upscaling (optional)
REPLICATE_API_TOKEN=r8_xxx

# ---- Optional: Payments ----

# Stripe keys for Pro subscriptions
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_PRO_PRICE_ID=price_xxx

# ---- Optional: Email ----

# Resend for OTP emails
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=CityFrame <noreply@yourdomain.com>
