{
  "version": 8,
  "name": "Copper Industrial",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#1c1917"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#171412",
        "fill-outline-color": "#292524"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#1c1917",
        "fill-opacity": 0
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": [
        "==",
        "class",
        "park"
      ],
      "paint": {
        "fill-color": "#1c1917",
        "fill-opacity": 0
      }
    },
    {
      "id": "road-residential",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "in",
        "class",
        "minor",
        "service",
        "path",
        "track"
      ],
      "paint": {
        "line-color": "#7c2d12",
        "line-width": 0.8,
        "line-opacity": 0.5
      }
    },
    {
      "id": "road-tertiary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "==",
        "class",
        "tertiary"
      ],
      "paint": {
        "line-color": "#9a3412",
        "line-width": 1.2,
        "line-opacity": 0.6
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "==",
        "class",
        "secondary"
      ],
      "paint": {
        "line-color": "#c2410c",
        "line-width": 1.8,
        "line-opacity": 0.75
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "==",
        "class",
        "primary"
      ],
      "paint": {
        "line-color": "#ea580c",
        "line-width": 2.2,
        "line-opacity": 0.85
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": [
        "in",
        "class",
        "motorway",
        "trunk"
      ],
      "paint": {
        "line-color": "#fb923c",
        "line-width": 3,
        "line-opacity": 1
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#1c1917",
        "fill-opacity": 0
      }
    },
    {
      "id": "building-3d",
      "type": "fill-extrusion",
      "source": "openmaptiles",
      "source-layer": "building",
      "minzoom": 14,
      "paint": {
        "fill-extrusion-color": "#fb923c",
        "fill-extrusion-height": [
          "coalesce",
          [
            "get",
            "render_height"
          ],
          10
        ],
        "fill-extrusion-base": 0,
        "fill-extrusion-opacity": 0.7
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": [
        "in",
        "class",
        "city",
        "town",
        "village",
        "suburb",
        "neighbourhood"
      ],
      "layout": {
        "text-field": [
          "format",
          [
            "coalesce",
            [
              "get",
              "name:latin"
            ],
            [
              "get",
              "name_en"
            ],
            [
              "get",
              "name"
            ]
          ],
          {},
          "\n",
          {},
          [
            "case",
            [
              "all",
              [
                "has",
                "name"
              ],
              [
                "!=",
                [
                  "get",
                  "name"
                ],
                [
                  "coalesce",
                  [
                    "get",
                    "name:latin"
                  ],
                  [
                    "get",
                    "name_en"
                  ],
                  [
                    "get",
                    "name"
                  ]
                ]
              ]
            ],
            [
              "get",
              "name"
            ],
            ""
          ],
          {
            "font-scale": 0.75
          }
        ],
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": [
          "interpolate",
          [
            "linear"
          ],
          [
            "zoom"
          ],
          8,
          12,
          14,
          18
        ],
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1,
        "visibility": "none"
      },
      "paint": {
        "text-color": "#fdba74",
        "text-halo-color": "#1c1917",
        "text-halo-width": 2
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": [
          "format",
          [
            "coalesce",
            [
              "get",
              "name:latin"
            ],
            [
              "get",
              "name_en"
            ],
            [
              "get",
              "name"
            ]
          ],
          {},
          "\n",
          {},
          [
            "case",
            [
              "all",
              [
                "has",
                "name"
              ],
              [
                "!=",
                [
                  "get",
                  "name"
                ],
                [
                  "coalesce",
                  [
                    "get",
                    "name:latin"
                  ],
                  [
                    "get",
                    "name_en"
                  ],
                  [
                    "get",
                    "name"
                  ]
                ]
              ]
            ],
            [
              "get",
              "name"
            ],
            ""
          ],
          {
            "font-scale": 0.75
          }
        ],
        "text-font": [
          "Noto Sans Regular"
        ],
        "text-size": 10,
        "symbol-placement": "line",
        "visibility": "none"
      },
      "paint": {
        "text-color": "#fb923c",
        "text-halo-color": "#1c1917",
        "text-halo-width": 1
      }
    }
  ]
}