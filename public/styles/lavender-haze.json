{
  "version": 8,
  "name": "Lavender Haze",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#faf5ff"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "paint": {
        "fill-color": "#e9d5ff",
        "fill-outline-color": "#d8b4fe"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#f3e8ff",
        "fill-opacity": 0.6
      }
    },
    {
      "id": "park",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "filter": ["==", "class", "park"],
      "paint": {
        "fill-color": "#ede9fe",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "road-street",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "paint": {
        "line-color": "#7c3aed",
        "line-width": 1.5,
        "line-opacity": 0.45
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "filter": ["in", "class", "primary", "secondary", "trunk", "motorway"],
      "paint": {
        "line-color": "#a855f7",
        "line-width": 2.5,
        "line-opacity": 0.85
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "building",
      "paint": {
        "fill-color": "#ede9fe",
        "fill-opacity": 0.6,
        "fill-outline-color": "#ddd6fe"
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "place",
      "filter": ["in", "class", "city", "town", "village", "suburb", "neighbourhood"],
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 8, 12, 14, 18],
        "text-transform": "uppercase",
        "text-letter-spacing": 0.1,
        "visibility": "none"
      },
      "paint": {
        "text-color": "#5b21b6",
        "text-halo-color": "#faf5ff",
        "text-halo-width": 2
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "openmaptiles",
      "source-layer": "transportation_name",
      "layout": {
        "text-field": "{name}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 10,
        "symbol-placement": "line",
        "visibility": "none"
      },
      "paint": {
        "text-color": "#6d28d9",
        "text-halo-color": "#faf5ff",
        "text-halo-width": 1
      }
    }
  ]
}
